<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_5">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <TextView
            android:id="@+id/txt_name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="Don hang 1"
            android:textSize="@dimen/sp_20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="nha hang"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_address_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_restaurant"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="dia chi" />

            <TextView
                android:id="@+id/txt_item_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_address_restaurant"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="Đơn đặt hàng:" />

            <TextView
                android:id="@+id/txt_item_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_item_order"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/txt_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_item_order_value"
                android:padding="@dimen/dp_5"
                android:text="Phí ship: " />

            <TextView
                android:id="@+id/txt_fee_ship_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_fee"
                android:layout_toRightOf="@id/txt_fee"
                android:gravity="right"
                android:padding="@dimen/dp_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignTop="@id/txt_accounting" />

            <TextView
                android:id="@+id/txt_accounting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_fee"
                android:padding="@dimen/dp_5"
                android:text="Tổng thanh toán: "
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_accounting_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_accounting"
                android:layout_toRightOf="@id/txt_accounting"
                android:gravity="right"
                android:padding="@dimen/dp_5"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_accounting"
                android:gravity="center"
                android:background="@color/cyan"
                android:padding="@dimen/dp_10"
                android:text="trang thai"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
