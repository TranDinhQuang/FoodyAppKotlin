<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/app_toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sum_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_24"
        android:text="Tổng giá : 100.000 đ"
        android:textSize="@dimen/dp_20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menu_monan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sum_value"
        android:layout_marginBottom="@dimen/dp_70"
        android:clipToPadding="false"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menu_nuocuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_menu_monan"
        android:layout_marginBottom="@dimen/dp_70"
        android:clipToPadding="false"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


    <Button
        android:id="@+id/button_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/border_button"
        android:text="@string/txt_order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>