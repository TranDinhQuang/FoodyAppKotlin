<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/group_one_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <ImageView
                android:id="@+id/img_one_one"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>
    </FrameLayout>

    <LinearLayout
            android:id="@+id/group_two_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="2">

        <ImageView
                android:id="@+id/img_two_one"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>

        <ImageView
                android:id="@+id/img_two_two"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/group_three_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="3">

        <ImageView
                android:id="@+id/img_three_one"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>

        <ImageView
                android:id="@+id/img_three_two"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>

        <ImageView
                android:id="@+id/img_three_three"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/background_login"/>
    </LinearLayout>

    <TableLayout
            android:id="@+id/group_four_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:visibility="gone">

        <TableRow>

            <ImageView
                    android:id="@+id/img_four_one"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_1"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_login"/>

            <ImageView
                    android:id="@+id/img_four_two"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_1"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_login"/>
        </TableRow>

        <TableRow>

            <ImageView
                    android:id="@+id/img_four_three"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_1"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_login"/>

            <FrameLayout
                    android:id="@+id/group_in_group_picture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_1">

                <ImageView
                        android:id="@+id/img_four_four"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/background_login"/>

                <ImageView
                        android:id="@+id/img_transparent"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@color/black_transparent"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/text_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+10"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:visibility="gone"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
