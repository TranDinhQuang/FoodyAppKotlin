<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_quanan"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/img_quan_an"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_login" />

    <TextView
        android:id="@+id/txt_ten_quan_an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_quan_an"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/txt_chi_nhanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ten_quan_an"
        android:layout_marginTop="@dimen/dp_5" />


    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_chi_nhanh"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/blue"
        android:text="Chỉnh sửa"
        android:textColor="@color/yellow" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_edit"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/btn_edit"
        android:background="@color/red"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="Xóa quán ăn"
        android:textColor="@color/white" />
</RelativeLayout>